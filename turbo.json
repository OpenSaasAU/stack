{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "opensaas-stack-docs#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"],
      "env": ["OPENAI_API_KEY"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "tsconfig.tsbuildinfo"],
      "env": ["DATABASE_URL"]
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
