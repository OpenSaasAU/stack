{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "@opensaas/core#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@opensaas/ui#build": {
      "dependsOn": ["@opensaas/core#build"],
      "outputs": ["dist/**", "dist/styles/**"]
    },
    "build": {
      "dependsOn": ["@opensaas/ui#build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
