{
  "name": "@opensaas/stack-core",
  "version": "0.1.0",
  "description": "Core stack for OpenSaas - schema definition, access control, and runtime utilities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./fields": {
      "types": "./dist/fields/index.d.ts",
      "default": "./dist/fields/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf .turbo dist tsconfig.tsbuildinfo"
  },
  "keywords": [
    "opensaas",
    "nextjs",
    "prisma",
    "admin"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@prisma/client": "^6.17.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@prisma/client": "^6.17.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^4.0.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0"
  }
}
