{
  "name": "@opensaas/stack-auth",
  "version": "0.16.0",
  "description": "Better-auth integration for OpenSaas Stack",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "default": "./dist/ui/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "default": "./dist/plugins/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "default": "./dist/mcp/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo dist tsconfig.tsbuildinfo",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "opensaas",
    "better-auth",
    "authentication",
    "nextjs"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenSaasAU/stack.git",
    "directory": "packages/auth"
  },
  "homepage": "https://stack.opensaas.au",
  "bugs": {
    "url": "https://github.com/OpenSaasAU/stack/issues"
  },
  "peerDependencies": {
    "@opensaas/stack-core": "^0",
    "better-auth": "^1.3.29",
    "next": "^15.0.0 || ^16.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@opensaas/stack-core": "workspace:*",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "better-auth": "^1.4.5",
    "next": "^16.0.7",
    "react": "^19.2.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
