{
  "name": "@opensaas/stack-storage",
  "version": "0.14.0",
  "description": "File and image upload field types with pluggable storage providers for OpenSaas Stack",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./fields": {
      "types": "./dist/fields/index.d.ts",
      "default": "./dist/fields/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "default": "./dist/providers/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "default": "./dist/runtime/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "mime-types": "^3.0.2",
    "sharp": "^0.34.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@opensaas/stack-core": "workspace:*",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@vitest/coverage-v8": "^4.0.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "@opensaas/stack-core": "^0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenSaasAU/stack.git",
    "directory": "packages/storage"
  },
  "homepage": "https://stack.opensaas.au",
  "bugs": {
    "url": "https://github.com/OpenSaasAU/stack/issues"
  }
}
