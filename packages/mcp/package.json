{
  "name": "@opensaas/stack-mcp",
  "version": "0.1.1",
  "description": "MCP (Model Context Protocol) server integration for OpenSaas Stack",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "default": "./dist/auth/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf .turbo dist tsconfig.tsbuildinfo"
  },
  "keywords": [
    "opensaas",
    "mcp",
    "model-context-protocol",
    "better-auth"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@opensaas/stack-core": "workspace:*",
    "better-auth": "^1.0.0"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@opensaas/stack-core": "workspace:*",
    "@prisma/client": "^6.17.1",
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^4.0.4",
    "better-auth": "^1.3.32",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0"
  }
}
